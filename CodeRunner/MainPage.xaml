<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CodeRunner.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Hellon't, World!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="game main image" />

            <Button
                x:Name="StartBtn"
                Text="Click me" 
                SemanticProperties.Description="button that starts the game"
                Clicked="OpenGame"
                HorizontalOptions="Fill" />
            <Button
                x:Name="Settings"
                Text="Setting me"
                Clicked="OpenSettings"
                SemanticProperties.Description="button to open the settings page"
            />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
